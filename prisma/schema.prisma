generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Household {
  id    Int    @id @default(autoincrement())
  email String @unique
  cats  Cat[]
}

model Cat {
  id           Int        @id @default(autoincrement())
  image        String?
  name         String
  birthday     DateTime
  healthStatus Boolean    @default(true)
  householdId  Int
  actions      Action[]
  household    Household  @relation(fields: [householdId], references: [id])
  schedules    Schedule[]
}

model Action {
  id         Int        @id @default(autoincrement())
  dateTime   DateTime
  catId      Int
  actionType ActionType
  cat        Cat        @relation(fields: [catId], references: [id])
}

model Schedule {
  id            Int           @id @default(autoincrement())
  requireAction ActionType
  frequency     Int
  frequencyUnit FrequencyUnit
  beginningDate DateTime?
  endingDate    DateTime?
  catId         Int
  cat           Cat           @relation(fields: [catId], references: [id])
}

enum FrequencyUnit {
  Day
  Week
  Month
  Year
}

enum ActionType {
  Food
  Medicin
  VetVisit
}
